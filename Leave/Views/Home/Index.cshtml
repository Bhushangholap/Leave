@{
    ViewData["Title"] = "Dashboard";
}

<div class="hero">
    <div class="row">
        <div class="col-sm-4">
            <br />
            <img src="/iis/Home/ProfilePhoto" height="200px" alt="@ViewData["firstName"] @ViewData["secondName"]"/>
        </div>
        <div class="col-sm-8">
            <h2>Hello, @ViewData["firstName"] @ViewData["secondName"]</h2>
        </div>
    </div>
</div>

<br />
<br />
<br />

<div class="row">
    <div class="col-md-4">
        <h2>Pending leaves</h2>
        <p>You have @ViewData["pendingcount"] pending leave requests.</p>
    </div>
    <div class="col-md-4">
        <h2>Approved leaves</h2>
        <p>You have @ViewData["approvedcount"] approved leave requests.</p>
    </div>
    <div class="col-md-4">
        <h2>Denied leaves</h2>
        <p>You have @ViewData["rejectedcount"] denied leave requests.</p>
    </div>
</div>
